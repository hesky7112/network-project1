                    <div className="text-center">
                      <div className="text-2xl sm:text-3xl font-bold text-indigo-600 mb-1">{metrics?.length || 0}</div>
                      <div className="text-xs sm:text-sm text-gray-600">Active Metrics</div>
                    </div>
                    <div className="text-center">
                      <div className="text-2xl sm:text-3xl font-bold text-green-600 mb-1">2.4 TB</div>
                      <div className="text-xs sm:text-sm text-gray-600">Data Processed</div>
                    </div>
                  </div>

                  <div className="mt-4 sm:mt-6 pt-4 sm:pt-6 border-t border-gray-200">
                    <div className="flex items-center justify-between text-xs sm:text-sm">
                      <span className="text-gray-600">Last Updated</span>
                      <span className="font-medium text-gray-900">{new Date().toLocaleTimeString()}</span>
                    </div>
                  </div>
