              </div>
            </div>
          </div>

          {/* Key Metrics - Multi-platform responsive grid */}
          <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 xl:grid-cols-4 gap-4 sm:gap-6 mb-3 sm:mb-4 lg:mb-6">
            <StatCard
              title="Total Devices"
              value={stats.total_devices}
              subtitle={`${stats.active_devices} active • ${((stats.active_devices / stats.total_devices) * 100).toFixed(1)}% uptime`}
              icon={Server}
              color="from-blue-500 to-blue-600"
              trend="up"
            />

            <StatCard
              title="Network Health"
              value={`${stats.uptime_percentage}%`}
              subtitle="30-day uptime"
              icon={Activity}
              color="from-green-500 to-green-600"
              trend="up"
            />

            <StatCard
              title="Active Alerts"
              value={stats.critical_alerts}
              subtitle={`${stats.total_alerts} total alerts`}
              icon={AlertTriangle}
              color={stats.critical_alerts > 0 ? "from-red-500 to-red-600" : "from-gray-500 to-gray-600"}
              trend={stats.critical_alerts > 0 ? 'down' : 'neutral'}
            />

            <StatCard
              title="Bandwidth Usage"
              value={`${stats.bandwidth_usage}%`}
              subtitle="Current utilization"
              icon={Wifi}
              color="from-purple-500 to-purple-600"
              trend="neutral"
            />
          </div>

          {/* Main Dashboard Grid - Enhanced responsive layout */}
          <div className="grid grid-cols-1 lg:grid-cols-3 xl:grid-cols-3 2xl:grid-cols-4 gap-6 sm:gap-8 mb-3 sm:mb-4 lg:mb-6">

            {/* Left Column - Devices & Recent Activity - Responsive spans */}
            <div className="lg:col-span-2 xl:col-span-2 2xl:col-span-3 space-y-6 sm:space-y-8">

              {/* Recent Devices - Enhanced for all screen sizes */}
              <div className="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                <div className="px-4 sm:px-6 py-4 sm:py-5 border-b border-gray-200 bg-gradient-to-r from-blue-50 to-white">
                  <div className="flex flex-col space-y-3 sm:flex-row sm:items-center sm:justify-between sm:space-y-0">
                    <div className="flex items-center">
                      <Server className="h-5 w-5 sm:h-6 sm:w-6 mr-2 sm:mr-3 text-blue-600" />
                      <h3 className="text-lg sm:text-xl font-semibold text-gray-900">Network Devices</h3>
                    </div>
                    <Button variant="ghost" size="sm" className="text-blue-600 hover:text-blue-700 hover:bg-blue-50 self-start sm:self-auto">
                      <Eye className="h-3 w-3 sm:h-4 sm:w-4 mr-2" />
                      View All Devices
                    </Button>
                  </div>
                </div>

                <div className="p-4 sm:p-6">
                  {devicesLoading ? (
                    <div className="space-y-3 sm:space-y-4">
                      {[...Array(4)].map((_, i) => (
                        <div key={i} className="animate-pulse">
                          <div className="h-16 sm:h-20 bg-gray-200 rounded-xl"></div>
                        </div>
                      ))}
                    </div>
                  ) : recentDevices.length > 0 ? (
                    <div className="grid gap-3 sm:gap-4 grid-cols-1 xl:grid-cols-2">
                      {recentDevices.map((device: Device) => (
                        <DeviceCard key={device.id} device={device} />
                      ))}
                    </div>
                  ) : (
                    <div className="text-center py-8 sm:py-12">
                      <Server className="h-12 w-12 sm:h-16 sm:w-16 text-gray-400 mx-auto mb-4" />
                      <p className="text-gray-500 font-medium mb-2 text-sm sm:text-base">No devices discovered yet</p>
                      <p className="text-xs sm:text-sm text-gray-400 mb-4">Devices will appear here once discovered</p>
                      <Button className="bg-blue-600 hover:bg-blue-700 text-white">
                        <Network className="h-3 w-3 sm:h-4 sm:w-4 mr-2" />
                        Run Network Discovery
                      </Button>
                    </div>
                  )}
                </div>
              </div>

              {/* Recent Alerts - Responsive full width */}
              <div className="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                <div className="px-4 sm:px-6 py-4 sm:py-5 border-b border-gray-200 bg-gradient-to-r from-orange-50 to-white">
                  <div className="flex flex-col space-y-3 sm:flex-row sm:items-center sm:justify-between sm:space-y-0">
                    <div className="flex items-center">
                      <AlertCircle className="h-5 w-5 sm:h-6 sm:w-6 mr-2 sm:mr-3 text-orange-600" />
                      <h3 className="text-lg sm:text-xl font-semibold text-gray-900">Recent Alerts</h3>
                      {stats.critical_alerts > 0 && (
                        <span className="ml-2 sm:ml-3 px-2 sm:px-3 py-1 bg-red-100 text-red-800 text-xs sm:text-sm font-medium rounded-full">
                          {stats.critical_alerts} critical
                        </span>
                      )}
                    </div>
                    <Button variant="ghost" size="sm" className="text-orange-600 hover:text-orange-700 hover:bg-orange-50 self-start sm:self-auto">
                      <Eye className="h-3 w-3 sm:h-4 sm:w-4 mr-2" />
                      View All Alerts
                    </Button>
                  </div>
                </div>

                <div className="p-4 sm:p-6">
                  {alertsLoading ? (
                    <div className="space-y-3 sm:space-y-4">
                      {[...Array(3)].map((_, i) => (
                        <div key={i} className="animate-pulse">
                          <div className="h-20 sm:h-24 bg-gray-200 rounded-xl"></div>
                        </div>
                      ))}
                    </div>
                  ) : recentAlerts.length > 0 ? (
                    <div className="space-y-3 sm:space-y-4">
                      {recentAlerts.map((alert: NetworkAlert) => (
                        <AlertCard key={alert.id} alert={alert} />
                      ))}
                    </div>
                  ) : (
                    <div className="text-center py-8 sm:py-12">
                      <CheckCircle className="h-12 w-12 sm:h-16 sm:w-16 text-green-400 mx-auto mb-4" />
                      <p className="text-gray-500 font-medium mb-2 text-sm sm:text-base">No active alerts</p>
                      <p className="text-xs sm:text-sm text-gray-400">Your network is running smoothly</p>
                    </div>
                  )}
                </div>
              </div>
            </div>

            {/* Right Column - System Health & Actions - Enhanced for tablets and up */}
            <div className="space-y-4 sm:space-y-6 lg:space-y-8">

              {/* System Performance - Enhanced sizing */}
              <div className="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                <div className="px-4 sm:px-6 py-4 sm:py-5 border-b border-gray-200 bg-gradient-to-r from-green-50 to-white">
                  <div className="flex items-center">
                    <Activity className="h-5 w-5 sm:h-6 sm:w-6 mr-2 sm:mr-3 text-green-600" />
                    <h3 className="text-base sm:text-lg lg:text-xl font-semibold text-gray-900">System Performance</h3>
                  </div>
                </div>

                <div className="p-4 sm:p-6 space-y-4 sm:space-y-6">
                  <div>
                    <div className="flex justify-between text-xs sm:text-sm mb-2 sm:mb-3">
                      <span className="text-gray-700 font-medium">Bandwidth</span>
                      <span className="font-semibold text-gray-900">{stats.bandwidth_usage}%</span>
                    </div>
                    <div className="w-full bg-gray-200 rounded-full h-2 sm:h-3 overflow-hidden">
                      <div
                        className="bg-gradient-to-r from-blue-500 to-blue-600 h-2 sm:h-3 rounded-full transition-all duration-1000"
                        style={{ width: `${stats.bandwidth_usage}%` }}
                      ></div>
                    </div>
                  </div>

                  <div>
                    <div className="flex justify-between text-xs sm:text-sm mb-2 sm:mb-3">
                      <span className="text-gray-700 font-medium">CPU Usage</span>
                      <span className="font-semibold text-gray-900">45.2%</span>
                    </div>
                    <div className="w-full bg-gray-200 rounded-full h-2 sm:h-3 overflow-hidden">
                      <div className="bg-gradient-to-r from-green-500 to-green-600 h-2 sm:h-3 rounded-full" style={{ width: '45.2%' }}></div>
                    </div>
                  </div>

                  <div>
                    <div className="flex justify-between text-xs sm:text-sm mb-2 sm:mb-3">
                      <span className="text-gray-700 font-medium">Memory</span>
                      <span className="font-semibold text-gray-900">67.8%</span>
                    </div>
                    <div className="w-full bg-gray-200 rounded-full h-2 sm:h-3 overflow-hidden">
                      <div className="bg-gradient-to-r from-yellow-500 to-yellow-600 h-2 sm:h-3 rounded-full" style={{ width: '67.8%' }}></div>
                    </div>
                  </div>

                  <div className="pt-3 sm:pt-4 border-t border-gray-200">
                    <div className="text-center">
                      <div className="text-xl sm:text-2xl font-bold text-gray-900 mb-1">98.5%</div>
                      <div className="text-xs sm:text-sm text-gray-600">Overall Health</div>
                    </div>
                  </div>
                </div>
              </div>

              {/* Quick Actions - Enhanced for mobile */}
              <div className="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                <div className="px-4 sm:px-6 py-4 sm:py-5 border-b border-gray-200 bg-gradient-to-r from-purple-50 to-white">
                  <div className="flex items-center">
                    <Zap className="h-5 w-5 sm:h-6 sm:w-6 mr-2 sm:mr-3 text-purple-600" />
                    <h3 className="text-base sm:text-lg lg:text-xl font-semibold text-gray-900">Quick Actions</h3>
                  </div>
                </div>

                <div className="p-4 sm:p-6">
                  <div className="space-y-2 sm:space-y-3">
                    <Button className="w-full justify-start bg-blue-600 hover:bg-blue-700 text-white text-sm sm:text-base" size="sm">
                      <Network className="h-3 w-3 sm:h-4 sm:w-4 mr-2 sm:mr-3" />
                      Run Network Discovery
                    </Button>
                    <Button className="w-full justify-start text-sm sm:text-base" variant="outline" size="sm">
                      <Activity className="h-3 w-3 sm:h-4 sm:w-4 mr-2 sm:mr-3" />
                      Generate Report
                    </Button>
                    <Button className="w-full justify-start text-sm sm:text-base" variant="outline" size="sm">
                      <AlertTriangle className="h-3 w-3 sm:h-4 sm:w-4 mr-2 sm:mr-3" />
                      View All Alerts
                    </Button>
                    <Button className="w-full justify-start text-sm sm:text-base" variant="outline" size="sm">
                      <Cpu className="h-3 w-3 sm:h-4 sm:w-4 mr-2 sm:mr-3" />
                      System Diagnostics
                    </Button>
                  </div>
                </div>
              </div>

              {/* Live Metrics Summary - Enhanced for tablets */}
              <div className="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                <div className="px-4 sm:px-6 py-4 sm:py-5 border-b border-gray-200 bg-gradient-to-r from-indigo-50 to-white">
                  <div className="flex items-center">
                    <TrendingUp className="h-5 w-5 sm:h-6 sm:w-6 mr-2 sm:mr-3 text-indigo-600" />
