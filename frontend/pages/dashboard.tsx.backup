            </div>

            {/* Device Status Distribution */}
            <div className="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
              <div className="px-4 sm:px-6 py-4 sm:py-5 border-b border-gray-200 bg-gradient-to-r from-green-50 to-white">
                <div className="flex items-center">
                  <PieChart className="h-5 w-5 sm:h-6 sm:w-6 mr-2 sm:mr-3 text-green-600" />
                  <h3 className="text-base sm:text-lg lg:text-xl font-semibold text-gray-900">Device Status</h3>
                </div>
              </div>
              <div className="p-4 sm:p-6">
                <ResponsiveContainer width="100%" height={250}>
                  <RechartsPieChart>
                    <Pie
                      data={[
                        { name: 'Active', value: stats.active_devices, fill: '#10B981' },
                        { name: 'Inactive', value: Math.max(0, stats.total_devices - stats.active_devices), fill: '#EF4444' },
                      ]}
                      cx="50%"
                      cy="50%"
                      outerRadius={80}
                      dataKey="value"
                      label={({ name, percent }) => `${name}: ${(percent * 100).toFixed(0)}%`}
                    />
                    <Tooltip />
                  </RechartsPieChart>
                </ResponsiveContainer>
                <div className="grid grid-cols-2 gap-4 mt-4">
                  <div className="text-center">
                    <div className="text-2xl font-bold text-green-600">{stats.active_devices}</div>
                    <div className="text-sm text-gray-600">Active</div>
                  </div>
                  <div className="text-center">
                    <div className="text-2xl font-bold text-red-600">{Math.max(0, stats.total_devices - stats.active_devices)}</div>
                    <div className="text-sm text-gray-600">Inactive</div>
                  </div>
                </div>
              </div>
            </div>

            {/* Network Performance Metrics */}
            <div className="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden xl:col-span-1 2xl:col-span-1">
              <div className="px-4 sm:px-6 py-4 sm:py-5 border-b border-gray-200 bg-gradient-to-r from-purple-50 to-white">
                <div className="flex items-center">
                  <BarChart3 className="h-5 w-5 sm:h-6 sm:w-6 mr-2 sm:mr-3 text-purple-600" />
                  <h3 className="text-base sm:text-lg lg:text-xl font-semibold text-gray-900">Performance Metrics</h3>
                </div>
              </div>
              <div className="p-4 sm:p-6">
                <ResponsiveContainer width="100%" height={250}>
                  <RechartsBarChart data={[
                    { name: 'CPU', value: 45.2, color: '#10B981' },
                    { name: 'Memory', value: 67.8, color: '#F59E0B' },
                    { name: 'Disk', value: 34.8, color: '#8B5CF6' },
                    { name: 'Network', value: 78.3, color: '#3B82F6' },
                  ]}>
                    <CartesianGrid strokeDasharray="3 3" stroke="#E5E7EB" />
                    <XAxis dataKey="name" stroke="#6B7280" fontSize={12} />
                    <YAxis stroke="#6B7280" fontSize={12} />
                    <Tooltip
                      contentStyle={{
                        backgroundColor: 'white',
                        border: '1px solid #E5E7EB',
                        borderRadius: '8px',
                        boxShadow: '0 4px 6px -1px rgba(0, 0, 0, 0.1)'
                      }}
                    />
                    <Bar dataKey="value" radius={[4, 4, 0, 0]}>
                      {[
                        { name: 'CPU', value: 45.2, color: '#10B981' },
                        { name: 'Memory', value: 67.8, color: '#F59E0B' },
                        { name: 'Disk', value: 34.8, color: '#8B5CF6' },
                        { name: 'Network', value: 78.3, color: '#3B82F6' },
                      ].map((entry, index) => (
                        <Cell key={`cell-${index}`} fill={entry.color} />
                      ))}
                    </Bar>
                  </RechartsBarChart>
                </ResponsiveContainer>
              </div>
            </div>
          </div>

          {/* Advanced Analytics Section */}
          <div className="grid grid-cols-1 xl:grid-cols-2 gap-6 sm:gap-8 mb-3 sm:mb-4 lg:mb-6">

            {/* Network Traffic Flow */}
            <div className="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
              <div className="px-4 sm:px-6 py-4 sm:py-5 border-b border-gray-200 bg-gradient-to-r from-indigo-50 to-white">
                <div className="flex items-center">
                  <AreaChart className="h-5 w-5 sm:h-6 sm:w-6 mr-2 sm:mr-3 text-indigo-600" />
                  <h3 className="text-base sm:text-lg lg:text-xl font-semibold text-gray-900">Network Traffic Flow</h3>
                </div>
              </div>
              <div className="p-4 sm:p-6">
                <ResponsiveContainer width="100%" height={300}>
                  <RechartsLineChart data={[
                    { time: '00:00', inbound: 120, outbound: 80 },
                    { time: '04:00', inbound: 90, outbound: 110 },
                    { time: '08:00', inbound: 180, outbound: 150 },
                    { time: '12:00', inbound: 220, outbound: 190 },
                    { time: '16:00', inbound: 250, outbound: 210 },
                    { time: '20:00', inbound: 160, outbound: 140 },
                  ]}>
                    <CartesianGrid strokeDasharray="3 3" stroke="#E5E7EB" />
                    <XAxis dataKey="time" stroke="#6B7280" fontSize={12} />
                    <YAxis stroke="#6B7280" fontSize={12} />
                    <Tooltip
                      contentStyle={{
                        backgroundColor: 'white',
                        border: '1px solid #E5E7EB',
                        borderRadius: '8px',
                        boxShadow: '0 4px 6px -1px rgba(0, 0, 0, 0.1)'
                      }}
                    />
                    <Legend />
                    <Line
                      type="monotone"
                      dataKey="inbound"
                      stroke="#3B82F6"
                      strokeWidth={3}
                      name="Inbound"
                      dot={{ fill: '#3B82F6', strokeWidth: 2, r: 4 }}
                    />
                    <Line
                      type="monotone"
                      dataKey="outbound"
                      stroke="#10B981"
                      strokeWidth={3}
                      name="Outbound"
                      dot={{ fill: '#10B981', strokeWidth: 2, r: 4 }}
                    />
                  </RechartsLineChart>
                </ResponsiveContainer>
              </div>
            </div>

            {/* System Health Radial Chart */}
            <div className="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
              <div className="px-4 sm:px-6 py-4 sm:py-5 border-b border-gray-200 bg-gradient-to-r from-emerald-50 to-white">
                <div className="flex items-center">
                  <Activity className="h-5 w-5 sm:h-6 sm:w-6 mr-2 sm:mr-3 text-emerald-600" />
                  <h3 className="text-base sm:text-lg lg:text-xl font-semibold text-gray-900">System Health Overview</h3>
                </div>
              </div>
              <div className="p-4 sm:p-6">
                <div className="grid grid-cols-2 gap-8">
                  {/* CPU Usage */}
                  <div className="text-center">
                    <ResponsiveContainer width={120} height={120} className="mx-auto mb-4">
                      <RadialBarChart cx="50%" cy="50%" innerRadius="60%" outerRadius="90%" data={[{ value: 45.2 }]}>
                        <RadialBar dataKey="value" cornerRadius={10} fill="#10B981" />
                      </RadialBarChart>
                    </ResponsiveContainer>
                    <div className="text-2xl font-bold text-gray-900">45.2%</div>
                    <div className="text-sm text-gray-600">CPU Usage</div>
                  </div>

                  {/* Memory Usage */}
                  <div className="text-center">
                    <ResponsiveContainer width={120} height={120} className="mx-auto mb-4">
                      <RadialBarChart cx="50%" cy="50%" innerRadius="60%" outerRadius="90%" data={[{ value: 67.8 }]}>
                        <RadialBar dataKey="value" cornerRadius={10} fill="#F59E0B" />
                      </RadialBarChart>
                    </ResponsiveContainer>
                    <div className="text-2xl font-bold text-gray-900">67.8%</div>
                    <div className="text-sm text-gray-600">Memory</div>
                  </div>
                </div>

                {/* Health Score */}
                <div className="mt-8 text-center">
                  <div className="inline-flex items-center justify-center w-32 h-32 bg-gradient-to-br from-green-400 to-green-600 rounded-full mb-4">
                    <div className="text-center">
                      <div className="text-3xl font-bold text-white">98.5</div>
                      <div className="text-sm text-green-100">Health</div>
                    </div>
                  </div>
                  <p className="text-sm text-gray-600">Overall System Health Score</p>
                </div>
              </div>
            </div>
          </div>

          {/* Bottom Summary Cards - Enhanced responsive grid */}
          <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 mt-2 sm:mt-4 lg:mt-6">
            <div className="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-6 sm:p-8 border border-blue-200 hover:shadow-lg transition-shadow duration-300">
              <div className="flex items-center justify-between">
                <div className="flex-1">
                  <p className="text-base sm:text-lg font-semibold text-blue-900 mb-2">Network Connections</p>
                  <p className="text-3xl sm:text-4xl font-bold text-blue-900">{metrics?.length || 0}</p>
                  <p className="text-xs sm:text-sm text-blue-700 mt-2">Active connections monitored</p>
                </div>
                <Wifi className="h-10 w-10 sm:h-12 sm:w-12 text-blue-600 opacity-80 ml-4" />
              </div>
            </div>

            <div className="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-6 sm:p-8 border border-green-200 hover:shadow-lg transition-shadow duration-300">
              <div className="flex items-center justify-between">
                <div className="flex-1">
                  <p className="text-base sm:text-lg font-semibold text-green-900 mb-2">System Health</p>
                  <p className="text-3xl sm:text-4xl font-bold text-green-900">98.5%</p>
                  <p className="text-xs sm:text-sm text-green-700 mt-2">Overall system performance</p>
                </div>
                <Activity className="h-10 w-10 sm:h-12 sm:w-12 text-green-600 opacity-80 ml-4" />
              </div>
            </div>

            <div className="bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl p-6 sm:p-8 border border-purple-200 hover:shadow-lg transition-shadow duration-300 sm:col-span-2 lg:col-span-1">
              <div className="flex items-center justify-between">
                <div className="flex-1">
                  <p className="text-base sm:text-lg font-semibold text-purple-900 mb-2">Data Analytics</p>
                  <p className="text-3xl sm:text-4xl font-bold text-purple-900">2.4 TB</p>
                  <p className="text-xs sm:text-sm text-purple-700 mt-2">Processed this month</p>
                </div>
                <Cpu className="h-10 w-10 sm:h-12 sm:w-12 text-purple-600 opacity-80 ml-4" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </Layout>
  )
}
